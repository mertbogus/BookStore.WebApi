@model List<BookStore.WebUI.Dtos.CategoryDtos.ResultCategoryDto>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h2 class="mb-3 font-weight-bold">Kategori Listesi</h2>

<table class="table table-striped table-hover table-bordered text-center w-100">
    <thead class="bg-white text-dark font-weight-bold">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td class="fw-bold fs-5">@count</td>
                <td class="fw-bold fs-5">@item.CategoryName</td>
                <td>
                    <a href="/Admin/AdminCategories/DeleteCategory/@item.CategoryId" class="btn btn-danger btn-sm fw-bold">
                        <i class="fas fa-trash-alt"></i> Sil
                    </a>
                </td>
                <td>
                    <a href="/Admin/AdminCategories/UpdateCategory/@item.CategoryId" class="btn btn-success btn-sm fw-bold">
                        <i class="fas fa-edit"></i> Güncelle
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a href="/Admin/AdminCategories/CreateCategory/" class="btn btn-primary fw-bold fs-5">
        <i class="fas fa-plus"></i> Yeni Kategori Girişi
    </a>
</div>

