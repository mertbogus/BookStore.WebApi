@model BookStore.WebUI.Dtos.ProductDtos.CreateProductDto
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<form method="post">
    <div class="container">
        <br /><br />
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <label>Ürün Stok Sayısı</label>
        <input type="text" asp-for="ProductStock" class="form-control mt-1" />
        <label>Ürün Fiyatı</label>
        <input type="text" asp-for="ProductPrice" class="form-control mt-1" />
        <button class="btn btn-primary mt-2">Ürün Ekle</button>
    </div>
</form>
