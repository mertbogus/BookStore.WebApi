<section id="best-selling" class="leaf-pattern-overlay">
	<div class="corner-pattern-overlay"></div>
	<div class="container">
		<div class="row justify-content-center">

			<div class="col-md-8">

				<div class="row">
					
					<div class="col-md-6">
						<figure class="products-thumb">
							<img src="@Model.ProductImageUrl" alt="book" class="single-image">
						</figure>
					</div>

					<div class="col-md-6">
						<div class="product-entry">
							<h2 class="section-title divider">Günün Kitabı</h2>

							<div class="products-content">
								<div class="author-name">@Model.ProductWriterName</div>
								<h3 class="item-title">@Model.ProductName</h3>
								<p>
									@Model.ProductDesc
								</p>
								<div class="item-price">@Model.ProductPrice.ToString("C")</div>
								<div class="btn-wrap">
									<a href="#" class="btn-accent-arrow">
										Şimdi Alışveriş Yap <i class="icon icon-ns-arrow-right"></i>
									</a>
								</div>
							</div>

						</div>
					</div>
					}
				</div>
				<!-- / row -->

			</div>

		</div>
	</div>
</section>